        app:srcCompat="@drawable/regtextbg1" />

    <ImageView
        android:id="@+id/Password1IconImageView"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="354dp"
        android:layout_marginBottom="279dp"
        app:srcCompat="@drawable/fe_key" />

    <EditText
        android:id="@+id/Password1ET"
        android:layout_width="327dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="269dp"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:textColorHint="#575757"
        android:textColor="#575757"
        android:backgroundTint="#00FFFFFF"
        android:hint="Повторите пароль"/>

    <TextView
        android:id="@+id/textViewOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="237dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="или"
        android:textColor="#595757"
        android:textSize="20dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/UnderORtxtv"
        android:layout_width="131dp"
        android:layout_height="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="224dp"
        app:srcCompat="@drawable/regtextbg1" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="175dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="войти"
        android:textAllCaps="false"
        android:textColor="#2878FF"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/UnderORtxtv1"
        android:layout_width="131dp"
        android:layout_height="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="165dp"
        app:srcCompat="@drawable/regtextbg1" />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="46dp"
        android:text="Зарегистрироваться"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:backgroundTint="#FF002A"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:onClick="onClickReg"/>

</RelativeLayout>