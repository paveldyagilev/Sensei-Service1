<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SidebarAct"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="662dp"
        android:background="#FF002A" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="445dp"
        android:background="#E2E2E2" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="524dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="Учу графическому\nрисованию, на Photoshop "
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="454dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="100 руб/час"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="72dp"
        android:background="#7F7F7F" />

    <ImageView
        android:id="@+id/sidebarShadow_IV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="318dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shadow_gradient" />

    <ImageView
        android:id="@+id/Sidebar_IV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="620dp"
        android:background="@drawable/profile_picture_ic" />

    <TextView
        android:id="@+id/rank_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="648dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="Ранг: 999"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/profile_IV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="326dp"
        android:layout_marginBottom="641dp"
        android:background="@drawable/camera_icon" />

    <TextView
        android:id="@+id/Name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="681dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="Дягилев Павел"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:backgroundTint="#00FFFFFF"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:textColor="#000000" />

</RelativeLayout>